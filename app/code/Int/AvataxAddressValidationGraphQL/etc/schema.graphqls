    lastname: String! @doc(description: "Avatax Lastname Validator Response."),
    country_id: String! @doc(description: "Avatax Country Id Validator Response."),
    region_id: String! @doc(description: "Avatax Region Id Validator Response."),
    region: String! @doc(description: "Avatax Region Validator Response."),
    street: [String]! @doc(description: "Avatax Street Validator Response."),
    city: String! @doc(description: "Avatax City Validator Response."),
    company: String! @doc(description: "Avatax Company Validator Response."),
    telephone: String! @doc(description: "Avatax Telephone Validator Response."),
    postcode: String! @doc(description: "Avatax Post Code Validator Response.")
    validate: String! @doc(description: "Check Validator Response Status.")
