type Mutation {
    getValidateAddress (
        firstname: String @doc(description: "Query by Firstname."),
        lastname: String @doc(description: "Query by Lastname."),
        country_id: String @doc(description: "Query by Country ID."),
        region_id: String @doc(description: "Query by Region Id."),
        region: String @doc(description: "Query by Region."),
        region_code: String @doc(description: "Query by Region Code."),
        street: [String]! @doc(description: "Query by Street."),
        company: String @doc(description: "Query by Company."),
        telephone: String @doc(description: "Query by Telephone."),
        city: String @doc(description: "Query by City."),
        postcode: String @doc(description: "Query by Post Code.")
