type Mutation {
    GetSalesGuestOrderStatus (
      orderId: String! @doc(description: "Query by Order Increment Id."),
      billing_lastname: String! @doc(description: "Query by Billing Lastname."),
      billing_user_email: String! @doc(description: "Query by Billing User Email."),
      billing_zip_code: String! @doc(description: "Query by Billing ZIP Code.")
    ) : GetGuestOrderStatusOutput @resolver( class: "Int\\SalesGuestFormGraphQL\\Model\\Resolver\\GetGuestOrderStatus") @doc(description: "Query by Get Guest Order Information.") ,
}

type GetGuestOrderStatusOutput {
	order_id: String @doc(description: "Guest Order Increment ID.")
	order_increment_id: String @doc(description: "Guest Order Increment ID.")
	state: String @doc(description: "Guest Order Information.")
	shipping_method: String @doc(description: "Guest Order Shipping Information.")
	grand_total: String @doc(description: "Guest Order Shipping Information.")
