<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="setTemplate" ifconfig="atwix_richsnippets/breadcrumbs/enabled">
                <argument name="template" xsi:type="string">Atwix_Richsnippets::theme/html/breadcrumbs.phtml</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="after.body.start">
            <block class="Atwix\Richsnippets\Block\Page\BreadcrumbsJson" name="richsnippets_json_breadcrumbs" />
            <block class="Atwix\Richsnippets\Block\Page\OrganizationJson" name="richsnippets_json_organization" />
        </referenceContainer>
    </body>
</page>
