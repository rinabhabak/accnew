<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">   
    <update handle="customer_account"/>
    <head>
        <title>Customer Saved Cards</title>
        <css src="Magedelight_Cybersource::css/cybersource.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Saved Credit Cards</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magedelight\Cybersource\Block\Customer\Cards\Listing" name="card-listing" template="customer/cards/list.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
