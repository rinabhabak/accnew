<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">   
    <update handle="customer_account"/>
    <head>
        <title>Add New Card</title>
        <css src="MD_Cybersource::css/cybersource.css"/>
         <link src="MD_Cybersource::js/cybersourcevalid.js"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Add New Card</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="MD\Cybersource\Block\Customer\Cards\Add" name="md-card-add" template="customer/cards/add.phtml"/>
        </referenceContainer>
    </body>
</page>
