            <argument name="mainTable" xsi:type="string">bss_product_alert_stock</argument>
            <argument name="resourceModel" xsi:type="string">Bss\ProductStockAlert\Model\ResourceModel\Stock</argument>
        </arguments>
    </virtualType>
